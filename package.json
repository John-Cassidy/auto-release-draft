{
	"name": "auto-release-draft",
	"version": "0.0.0",
	"private": true,
	"description": "Drafts a GitHub release with the changes introduced by a newly created version tag",
	"main": "lib/main.js",
	"scripts": {
		"build": "tsc",
		"format": "prettier --write **/*.ts",
		"format-check": "prettier --check **/*.ts",
		"lint": "eslint src/*.ts",
		"package": "ncc build --source-map --license licenses.txt",
		"test": "jest",
		"buildpackage": "npm run format && npm run lint && npm run build && npm run package",
		"all": "npm run build && npm run format && npm run lint && npm run package && npm test"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/John-Cassidy/auto-release-draft.git"
	},
	"keywords": [
		"actions",
		"node",
		"setup"
	],
	"author": "John Cassidy",
	"license": "MIT",
	"dependencies": {
		"@actions/core": "^1.9.0",
		"@actions/exec": "^1.1.1",
		"@actions/github": "^5.0.3"
	},
	"devDependencies": {
		"@types/jest": "^27.5.2",
		"@types/jest-when": "^3.5.2",
		"@types/node": "^16.10.5",
		"@types/semver": "^7.3.10",
		"@typescript-eslint/parser": "^5.30.5",
		"@vercel/ncc": "^0.34.0",
		"eslint": "^8.19.0",
		"eslint-plugin-github": "^4.3.6",
		"eslint-plugin-jest": "^27.0.4",
		"jest": "^27.2.5",
		"jest-circus": "^28.1.2",
		"jest-when": "^3.5.1",
		"js-yaml": "^4.1.0",
		"prettier": "2.7.1",
		"ts-jest": "^27.1.2",
		"typescript": "^4.7.4"
	}
}